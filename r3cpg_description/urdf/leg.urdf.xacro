<?xml version="1.0"?>
<robot
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  name="r3cpg_body"  >
  
  <xacro:macro name="leg" params="parent side reflect">
    <link
      name="leg_${side}_shoulder">
      <inertial>
        <origin
          xyz="1.7689E-08 0.024508 -0.063634"
          rpy="0 0 0" />
        <mass
          value="0.12155" />
        <inertia
          ixx="0.0001766"
          ixy="-3.1201E-11"
          ixz="-5.9479E-11"
          iyy="0.00014384"
          iyz="1.3321E-06"
          izz="5.9298E-05" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_shoulder.stl" />
        </geometry>
        <material name="Grey1" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_shoulder.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="leg_${side}_shoulder"
      type="revolute">
      <origin
        xyz="0 ${-reflect*0.00252} 0"
        rpy="0 0 ${(reflect-1.0)/2.0*3.1415}" /><!--  -->
      <parent
        link="${parent}" />
      <child
        link="leg_${side}_shoulder" />
      <axis
        xyz="0 ${-reflect} 0" />
      <limit
        lower="-1.0"
        upper="1.0"
        effort="0"
        velocity="0" />
    </joint>
    <link
      name="leg_${side}_elbow">
      <inertial>
        <origin
          xyz="-1.7313E-08 0.026803 -0.063159"
          rpy="0 0 0" />
        <mass
          value="0.12414" />
        <inertia
          ixx="0.00018537"
          ixy="-3.1359E-11"
          ixz="6.0464E-11"
          iyy="0.00014551"
          iyz="-2.1303E-06"
          izz="6.7084E-05" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_elbow.stl" />
        </geometry>
        <material name="Grey2" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_elbow.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="leg_${side}_elbow_joint"
      type="revolute">
      <origin
        xyz="0 0.00142 -0.09284"
        rpy="0 0 0" />
      <parent
        link="leg_${side}_shoulder" />
      <child
        link="leg_${side}_elbow" />
      <axis
        xyz="0 ${-reflect} 0" />
      <limit
        lower="-1.0"
        upper="1.0"
        effort="0"
        velocity="0" />
    </joint>
    <link
      name="leg_${side}_wrist">
      <inertial>
        <origin
          xyz="-4.1233E-10 0.027507 -0.036847"
          rpy="0 0 0" />
        <mass
          value="0.066391" />
        <inertia
          ixx="5.2481E-05"
          ixy="4.1851E-12"
          ixz="1.8037E-11"
          iyy="3.0101E-05"
          iyz="1.7364E-08"
          izz="3.9757E-05" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_wrist.stl" />
        </geometry>
        <material name="Grey3" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://r3cpg_description/meshes/leg_wrist.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="leg_${side}_wrist_joint"
      type="revolute">
      <origin
        xyz="0 -0.00092 -0.09284"
        rpy="0 0 0" />
      <parent
        link="leg_${side}_elbow" />
      <child
        link="leg_${side}_wrist" />
      <axis
        xyz="0 ${-reflect} 0" />
      <limit
        lower="-1.0"
        upper="1.0"
        effort="0"
        velocity="0" />
    </joint>
  </xacro:macro>

</robot>
